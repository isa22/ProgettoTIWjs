  <filter> 
      <filter-name>LoginChecker</filter-name>
      <filter-class>filters.LoginChecker</filter-class> 
 </filter> 
 
  <filter-mapping> 
    <filter-name>LoginChecker</filter-name> 
    <url-pattern>/GetAlbum</url-pattern> 
    <url-pattern>/ChangeAlbumOrder</url-pattern> 
    <url-pattern>/CreateComment</url-pattern> 
    <url-pattern>/GoToHomePage</url-pattern> 
 </filter-mapping> 
  <welcome-file-list>
    <welcome-file>Login.html</welcome-file>
  </welcome-file-list>
</web-app>
